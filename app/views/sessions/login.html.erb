<% content_for :extra_css do %>
  <link rel="stylesheet" href="/assets/src/layout/wordlist.css">
<% end %>

<%= render "shared/navbar" %>

<main>
  <section id="login">
    <div class="form">
      <h1>Login</h1>

      <%= form_with url: login_path, method: :post, local: true, data: { turbo: false } do |form| %>
        <label for="username">Username:</label>
        <%= form.text_field :username, id: "username", placeholder: "Your username", required: true, minlength: 3, maxlength: 15 %>
      
        <label for="password">Password:</label>
        <%= form.password_field :password, id: "password", placeholder: "Your password", required: true %>
      
        <button type="submit">Login</button>
      <% end %>
      
      <p>Donâ€™t have an account? <%= link_to "Sign up", signup_path %></p>
      
    </div>
  </section>
</main>

<%= render "shared/footer" %>
