<% content_for :extra_css do %>
  <link rel="stylesheet" href="/css/layout/login.css">
<% end %>

<%= render "shared/navbar" %>

<h1>Login</h1>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: login_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email, "Email" %><br>
    <%= form.email_field :email, placeholder: "Deine Email", required: true %>
  </div>

  <div>
    <%= form.label :password, "Passwort" %><br>
    <%= form.password_field :password, placeholder: "Dein Passwort", required: true %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>

<div>
  <%= link_to "Noch kein Konto? Hier registrieren!", signup_path %>
</div>
