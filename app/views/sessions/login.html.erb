<% content_for :extra_css do %>
  <link rel="stylesheet" href="/assets/src/layout/wordlist.css">
<% end %>

<%= render "shared/navbar" %>

<main>
  <section id="login">
    <div class="form">
      <h1>Login</h1>

      <% if flash[:alert] %>
        <p style="color: red;"><%= flash[:alert] %></p>
      <% end %>

      <%= form_with url: login_path, method: :post, local: true do |form| %>
        <label for="email">Email:</label>
        <%= form.email_field :email, id: "email", placeholder: "Enter your email", required: true %>

        <label for="password">Password:</label>
        <%= form.password_field :password, id: "password", placeholder: "Enter your password", required: true %>

        <button type="submit">Login</button>
      <% end %>

      <p>Donâ€™t have an account? <%= link_to "Sign up", signup_path %></p>
    </div>
  </section>
</main>

<%= render "shared/footer" %>
