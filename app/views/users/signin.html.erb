<%= render "shared/navbar" %>

<main>
  <section id="login" class="signup">
    <div class="form">
      <h1>Sign Up</h1>

      <% if flash[:alert] %>
        <p style="color: red;"><%= flash[:alert] %></p>
      <% end %>

      <%= form_with model: @user, url: signup_path, method: :post, local: true do |form| %>
        <label for="email">Email:</label>
        <%= form.email_field :email, id: "email", placeholder: "Enter your email", required: true %>

        <label for="password">Password:</label>
        <%= form.password_field :password, id: "password", placeholder: "Enter your password", required: true %>

        <label for="password_confirmation">Repeat Password:</label>
        <%= form.password_field :password_confirmation, id: "password_confirmation", placeholder: "Repeat your password", required: true %>

        <button type="submit">Done</button>
      <% end %>

      <p>Already have an account? <%= link_to "Login", login_path %></p>
    </div>
  </section>
</main>

<%= render "shared/footer" %>
