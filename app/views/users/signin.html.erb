<%= render "shared/navbar" %>

<h1>Sign Up</h1>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with model: @user, url: signup_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email, "Email" %><br>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :password, "Passwort" %><br>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Passwort bestätigen" %><br>
    <%= form.password_field :password_confirmation, required: true %>
  </div>

  <div>
    <%= form.submit "Registrieren", class: "btn btn-primary" %>
  </div>
<% end %>

<div>
  <%= link_to "Zurück zum Login", login_path, class: "btn btn-link" %>
</div>


