<link rel="stylesheet" href="/css/nav.css">

<header>
  <%= link_to root_path, class: "logo-link" do %>
    <%= image_tag "logo.png", alt: "Logo", class: "logo" %>
  <% end %>
  <nav class="navmenu">
    <div class="hamburger">
      <span class="line-1"></span>
      <span class="line-2"></span>
    </div>
    <ul>
      <% if current_user %>
      <li><%= link_to "WordList", saved_words_path %></li>
        <li><%= link_to "Profile", profile_path %></li>
        <li>
          <%= form_with url: logout_path, method: :delete, local: true, id: "logout-form" do %>
          <% end %>
          <%= link_to "Log Out", "#", onclick: "document.getElementById('logout-form').submit();" %>
        </li>
        <li><%= link_to "Saved Words", saved_words_path %></li>
      <% else %>
        <li><%= link_to "Login", login_path %></li>
      <% end %>
    </ul>
  </nav>
</header>

